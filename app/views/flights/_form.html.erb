<%= form_with(model: flight, :html => { :onsubmit => "return isSame();" }) do |form| %>
  <% if flight.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
        <% flight.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div>
    <%= form.label :ticket_class, style: "display: block" %>
    <%= form.select :ticket_class, [['Small','small'],['Private','private'],['Jumbo','jumbo']] %>
  </div>
  <br>
  <div>
    <%= form.label :manufacturer, style: "display: block" %>
    <%= form.text_field :manufacturer %>
  </div>
  <br>
  <div>
    <%= form.label :source_city, style: "display: block" %>
    <%= form.text_field :source_city, id: 'source_city'%>
  </div>
  <br>
  <div>

    <%= form.label :destination_city, style: "display: block" %>
    <%= form.text_field :destination_city, id: 'destination_city'%>
  </div>
  <br>
  <div>
    <%= form.label :capacity, style: "display: block" %>
    <%= form.number_field :capacity %>
  </div>
  <br>
  <div>
    <%= form.label :cost, style: "display: block" %>
    <%= form.number_field :cost %>
  </div>
  <br>
  <div>
    <%= form.submit%>
  </div>

<script>
function isSame(){
var destination_city = document.getElementById("destination_city");
var source_city = document.getElementById("source_city");
  if (destination_city.value.toLowerCase() == source_city.value.toLowerCase()) {
      alert('Source and Destination cannot be same.');
      return false;
  }
}
</script>

<% end %>
