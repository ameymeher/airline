<p style="color: green"><%= notice %></p>

<h1>Active user table</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile number</th>
    <th>Is Admin</th>
    <th colspan="4">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.mobile %></td>
      <td><%= user.is_admin %></td>
      <td><%= link_to 'Show', user %></td>
      <% if current_user.is_admin %>
      <td><%= link_to 'View Reservations', reservations_path(:user_id => user.id) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<% if current_user.is_admin %>
  <%= link_to "New user", new_user_path %>
<% end %>
<%= link_to 'Back to home', root_path %>
